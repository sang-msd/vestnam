@model PagedList.IPagedList<Data.EF.ProductCategory>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header {
    Danh sách danh mục sản phẩm
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách danh mục sản phẩm</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Index", "ProductCategory", FormMethod.Get))
        {
            <div class="row form-group">
                <div class="col-lg-12 row">
                    <div class="col-md-4">
                        <a href="/Admin/ProductCategory/Create" class="btn btn-primary">Thêm mới</a>
                    </div>
                </div>
            </div>
        }
        <div class="table-responsive" style="overflow-x: hidden;">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Thứ tự</th>
                                    <th>Tên</th>
                                    <th>Danh mục cha</th>
                                    <th>Ngày tạo</th>
                                    <th>Ngày cập nhật</th>
                                    <th>Trạng thái</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.Id">
                                        <td>@item.DisplayOrder</td>
                                        <td>@item.Name</td>
                                        <td>@GetParentCategoryName(item.ParentId)</td>
                                        <td>@item.CreatedDate</td>
                                        <td>@item.ModifiedDate</td>
                                        <td><a href="#" class="btn-active" data-id="@item.Id">@(item.Status ? "Kích hoạt" : "Khóa")</a></td>
                                        <td>
                                            <a href="@Url.Action("Details", "ProductCategory", new { id = item.Id })" class="text-primary f2"><i class="fa-solid fa-eye"></i></a>
                                            <a href="@Url.Action("Edit", "ProductCategory", new { id = item.Id })" class="text-primary f2"><i class="fas fa-edit"></i></a>
                                            <a href="@Url.Action("Delete", "ProductCategory", new { id = item.Id })" class="text-primary f2"><i class="fa-solid fa-trash-can"></i></a>
                                            @Ajax.ActionLink("Xóa", "Delete", new { @id = item.Id }, new AjaxOptions
                                       {
                                           Confirm = "Bạn có muốn xóa bản ghi này?",
                                           OnComplete = "$('#row_" + @item.Id + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section CustomJs {
    <script src="/Assets/Admin/js/controller/productCategoryController.js"></script>
}

@functions {
    public string GetParentCategoryName(long? parentId)
    {
        if (parentId == null)
        {
            return "Là danh mục gốc";
        }

        var parentCategory = Model.FirstOrDefault(c => c.Id == parentId);
        if (parentCategory != null)
        {
            return parentCategory.Name;
        }

        return string.Empty;
    }
}