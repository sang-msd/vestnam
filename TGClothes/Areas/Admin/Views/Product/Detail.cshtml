
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var product = (Data.EF.Product)ViewBag.Product;
    var gallery = (Data.EF.Gallery)ViewBag.ProductGallery;
}

@section header {
    Chi tiết sản phẩm    
}

<div class="col-lg-12 padding-8">

    <dl class="dl-horizontal" style="overflow: hidden;">
        <div class="menu_option-head2">Chi tiết sản phẩm</div>
        <hr />

        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            <p>@product.Name</p>
        </dd>

        <dt>
            Hình
        </dt>

        <dd>
            <img src="@product.Image" height="200px" />
        </dd>

        <dt>
            Thư viện 1
        </dt>

        <dd>
            <img src="@gallery.Image1" height="200px" />
        </dd>

        <dt>
            Thư viện 2
        </dt>

        <dd>
            <img src="@gallery.Image2" height="200px" />
        </dd>

        <dt>
            Thư viện 3
        </dt>

        <dd>
            <img src="@gallery.Image3" height="200px" />
        </dd>

        <dt>
            Giá bán
        </dt>

        <dd>
            @String.Format("{0:N0}", @product.Price) vnđ
        </dd>

        <dt>
            Ngày cập nhập
        </dt>

        <dd>
            <p>@product.ModifiedDate</p>
        </dd>

        <dt>
            số lượng tồn
        </dt>

        <dd>
            Progressing
        </dd>

        <dt>
            mô tả
        </dt>

        <dd>
            @Html.Raw(product.Description)
        </dd>

    </dl>
</div>

