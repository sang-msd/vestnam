@model TGClothes.Models.ProductModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var categories = ViewBag.CategoryId;
    var sizes = ViewBag.Sizes;
}

@section header{
    Chỉnh sửa sản phẩm
}

@{
    var sizesJson = Newtonsoft.Json.JsonConvert.SerializeObject(Model.Sizes);
}

@section CustomJs{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            finder.popup();
        })

        $('#btnSelectImage1').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage1').val(url);
            };
            finder.popup();
        })

        $('#btnSelectImage2').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage2').val(url);
            };
            finder.popup();
        })

        $('#btnSelectImage3').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage3').val(url);
            };
            finder.popup();
        })

        var editor = CKEDITOR.replace('txtContent', {
            customConfig: '/Assets/Admin/plugin/ckeditor/config.js',
        });
    </script>

    <script>
        $(document).ready(function () {
            var sizeStockIndex = 1;

            $("#addSizeStock").click(function () {
                var row = `<tr>
                            <td>
                                <select class="form-control" name="ProductSizes[${sizeStockIndex}].SizeId">
                                    <option value="">-- Select Size --</option>
                                    @foreach (var size in Model.Sizes)
                                    {
                                        <option value="@size.Id">@size.Name</option>
                                    }
                                </select>
                            </td>
                            <td>
                                <input type="text" class="form-control" name="ProductSizes[${sizeStockIndex}].Stock" />
                            </td>
                        </tr>`;
                $("#sizeStockTable tbody").append(row);
                sizeStockIndex++;
            });
        });
    </script>

    <script>
    function addSizeStock() {
        var tableBody = document.getElementById("sizeStockTable").getElementsByTagName('tbody')[0];
        var rowCount = tableBody.rows.length;

        var newRow = tableBody.insertRow(rowCount);

        var sizeCell = newRow.insertCell(0);
        var sizeSelect = document.createElement("select");
        sizeSelect.className = "form-control";
        sizeSelect.name = "ProductSizes[" + rowCount + "].SizeId";

        var defaultOption = document.createElement("option");
        defaultOption.value = "";
        defaultOption.text = "-- Select Size --";
        sizeSelect.appendChild(defaultOption);

        var sizes = @Html.Raw(sizesJson);
        for (var i = 0; i < sizes.length; i++) {
            var option = document.createElement("option");
            option.value = sizes[i].Id;
            option.text = sizes[i].Name;
            sizeSelect.appendChild(option);
        }

        sizeCell.appendChild(sizeSelect);

        var stockCell = newRow.insertCell(1);
        var stockInput = document.createElement("input");
        stockInput.type = "text";
        stockInput.className = "form-control";
        stockInput.name = "ProductSizes[" + rowCount + "].Stock";
        stockCell.appendChild(stockInput);

        var actionCell = newRow.insertCell(2);
        var removeButton = document.createElement("button");
        removeButton.type = "button";
        removeButton.className = "btn btn-danger";
        removeButton.textContent = "Remove";
        removeButton.onclick = function () {
            removeSizeStock(this);
        };
        actionCell.appendChild(removeButton);
    }

    function removeSizeStock(button) {
        var row = button.parentNode.parentNode;
        row.parentNode.removeChild(row);
    }
    </script>

    <script>
        var editor = CKEDITOR.replace('inputDetails', {
            customConfig: '/Assets/Admin/plugin/ckeditor/config.js'
        });
    </script>
}

